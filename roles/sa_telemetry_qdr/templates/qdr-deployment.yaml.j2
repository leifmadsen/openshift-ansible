apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: qdr-{{ item }}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: qdr
        version: v1
        type: router
        node: {{ item }}
    spec:
      containers:
      - name: qdr-{{ item }}
        image: nfvpe/qpid-dispatch-router:latest
        imagePullPolicy: IfNotPresent
        ports:
        - name: internal
          containerPort: 5672
          protocol: TCP
        - name: external
          containerPort: 20001
          protocol: TCP
        volumeMounts:
        - name: qdrouterd-config
          mountPath: /etc/qpid-dispatch
      volumes:
      - name: qdrouterd-config
        configMap:
          name: qdrouterd-config-{{ item }}
      nodeSelector:
        node: {{ item }}
