apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: alertmanager
  labels:
    {{ promops_deploy.name }}-app: alertmanager
spec:
  selector:
    matchLabels:
      alertmanager: main
  namespaceSelector:
    matchNames:
    - {{ promops_deploy.namespace }}
  endpoints:
  - port: web
    interval: 30s
